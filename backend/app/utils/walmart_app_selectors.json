        "resource_id": "com.walmart.android:id/search_view_clear",
        "xpath": "//android.widget.ImageView[@content-desc=\"Clear Text\"]",
        "uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/search_view_clear\")"
    },
    "product_list": {
        "resource_id": "com.walmart.android:id/content_container_main_module",
        "xpath": "//androidx.recyclerview.widget.RecyclerView[@resource-id=\"com.walmart.android:id/content_container_main_module\"]",
        "uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/tempo_components_internal_contentContainerView\")",
        "note": "Products RecyclerView - second RecyclerView in layout"
    },
    "products_recycler_view": {
        "resource_id": "com.walmart.android:id/recycler_view",
        "xpath": "//androidx.recyclerview.widget.RecyclerView[@resource-id=\"com.walmart.android:id/recycler_view\"]",
        "uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/recycler_view\")",
        "note": "Products RecyclerView containing only actual products (no ads) - use this for scrolling to top"
    },
    "filters_recycler": {
        "resource_id": "com.walmart.android:id/tempo_shared_internal_content_container_top",
        "xpath": "//androidx.recyclerview.widget.RecyclerView[@resource-id=\"com.walmart.android:id/tempo_shared_internal_content_container_top\"]",
        "uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/carousel_container\").instance(0)",
        "note": "Filters RecyclerView - first RecyclerView (SKIP THIS)"
    },
    "product_item": {
        "resource_id": "com.walmart.android:id/product_tile_list_view",
        "xpath_pattern": "//androidx.recyclerview.widget.RecyclerView/android.view.ViewGroup[{index}]",
        "accessibility_id_pattern": "//android.view.ViewGroup[@content-desc=\"{product_name}\"]",
        "structure": {
            "viewgroup_1": "Result counts and metadata (skip)",
            "viewgroup_2": "First product (spacing included inside)",
            "viewgroup_3": "Second product (spacing included inside)",
            "viewgroup_4": "Third product",
            "pattern": "Result count, then all products (spacing is inside each product ViewGroup)"
        },
        "first_product_xpath": "//androidx.recyclerview.widget.RecyclerView[@resource-id='com.walmart.android:id/recycler_view']/android.view.ViewGroup[2]//android.view.ViewGroup[@resource-id='com.walmart.android:id/product_tile_list_view']",
        "first_product_xpath_alt": "//androidx.recyclerview.widget.RecyclerView[@resource-id='com.walmart.android:id/recycler_view']/android.view.ViewGroup[2]",
        "first_product_xpath_safe": "//androidx.recyclerview.widget.RecyclerView[@resource-id='com.walmart.android:id/recycler_view']/android.view.ViewGroup[2]/android.view.ViewGroup[@resource-id='com.walmart.android:id/product_tile_list_view' and not(.//android.view.ViewGroup[@resource-id='com.walmart.android:id/product_tile_sponsored_label'])]",
        "first_product_uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/product_tile_list_view\").instance(0)",
        "note": "ROBUST APPROACH: Navigate through hierarchy - Find products RecyclerView (recycler_view) -> Get child at index 1 (first product, skipping header at index 0) -> Find product_tile_list_view within. This ensures we're in the products RecyclerView and skip the header. Ads are in separate container (ad_container) and won't be in this RecyclerView."
    },
    "add_to_cart_button": {
        "resource_id": "com.walmart.android:id/add_to_cart_button",
        "xpath": "(//android.view.ViewGroup[@resource-id=\"com.walmart.android:id/quantitystepper_root\"])[1]",
        "xpath_scoped": "//androidx.recyclerview.widget.RecyclerView[@resource-id='com.walmart.android:id/recycler_view']/android.view.ViewGroup[2]//android.view.ViewGroup[@resource-id='com.walmart.android:id/quantitystepper_root']",
        "xpath_exclude_ads": "//android.view.ViewGroup[@resource-id='com.walmart.android:id/product_tile_list_view'][not(ancestor::android.widget.FrameLayout[@resource-id='com.walmart.android:id/ad_container'])]//android.view.ViewGroup[@resource-id='com.walmart.android:id/quantitystepper_root']",
        "uiselector": "new UiSelector().resourceId(\"com.walmart.android:id/quantitystepper_root\").instance(0)",
        "note": "IMPORTANT: Ads do NOT have product_tile_list_view or quantitystepper_root. If finding ads, check: 1) Wrong instance number, 2) XPath not scoped to products RecyclerView, 3) Element hierarchy changed. Use xpath_scoped or xpath_exclude_ads to explicitly avoid ads."
    },
